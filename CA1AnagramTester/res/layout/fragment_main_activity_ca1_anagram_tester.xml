<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ca1acronymtester.MainActivityCA1acronymTester$PlaceholderFragment" >

    <Button
            android:id="@+id/TestAnagram"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:onClick="onClickTestAnagram"
            android:text="Test Anagram" />

        <TextView
            android:id="@+id/Spacer2"
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_below="@+id/TestAnagram"/>

        <Button
            android:id="@+id/TestTitle"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/Spacer2"
            android:onClick="onClickTestTitle"
            android:text="Test Title" />
        
        <TextView
            android:id="@+id/Spacer3"
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_below="@+id/TestTitle"/>
        
        <Button
        android:id="@+id/buttonCAX1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Spacer3"
        android:layout_centerHorizontal="true"
        android:onClick="onClickCAX1"
        android:text="CA X1" />
        
        <Button
        android:id="@+id/buttonCAX10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCAX1"
        android:layout_centerHorizontal="true"
        android:onClick="onClickCAX10"
        android:text="CA X10" />

</RelativeLayout>
