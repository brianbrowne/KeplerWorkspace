<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ca1acronymtester.TestAnagram$PlaceholderFragment" >

    <TextView
        android:id="@+id/AnagramDescription"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:text="What title is associated with this anagram?" />
    
    <Button
        android:id="@+id/GetTitleAnagramView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickGetTitleAnagram"
        android:layout_toRightOf="@+id/AnagramDescription"
        android:text="Get Title" />

    <TextView
        android:id="@+id/PullTestStringAnagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GetTitleAnagramView" />

    <EditText
        android:id="@+id/EditTextTestAnagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your guess"
        android:layout_below="@+id/PullTestStringAnagram"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonTestAnagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextTestAnagram"
        android:onClick="onClickTestYourselfAnagram"
        android:layout_centerHorizontal="true"
        android:text="Test" />
    
    <TextView
        android:id="@+id/TextViewTitleAnswerAnagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonTestAnagram" />
    
     

</RelativeLayout>
